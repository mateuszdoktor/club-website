{
  "compilerOptions": {
    "target": "ES2017",
    "typeRoots": ["./types", "./node_modules/@types"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/api/translate/route.js",
    "app/news/[id]/page.tsx",
    "app/api/auth/[...nextauth]/route.ts",
    "components/news/single-news/comments/CommentsSection.jsx",
    "components/news/single-news/comments/CommentsForm.jsx",
    "app/team/page.tsx",
    "components/season/MatchCard.jsx",
    "app/season/page.tsx"
  ],
  "exclude": ["node_modules"]
}
