generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(cuid())
  name     String
  email    String    @unique
  password String    // Powinno byÄ‡ hashowane
  image    String?   // Nullable, opcjonalne
  comments Comment[]
  headlines Headline[] @relation("AuthorHeadlines")
}

model Headline {
  id          String     @id @default(cuid())
  img         String
  title       String   @unique
  description String
  fullText    String
  authorId    String
  author      User       @relation("AuthorHeadlines", fields: [authorId], references: [id])
  comments    Comment[]
  createdAt   DateTime   @default(now())
}

model Comment {
  id         String   @id @default(cuid())
  headlineId String
  userId     String
  text       String
  createdAt  DateTime @default(now())
  
  headline   Headline @relation(fields: [headlineId], references: [id])
  user       User     @relation(fields: [userId], references: [id])
}